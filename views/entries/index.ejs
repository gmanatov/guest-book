<%- include('../partials/header') %>

    <ul>
      <% entries.forEach(function(e) { %>
        <li>
            
            <a href="/entries/<%= e.id %>"><%= e.date %> - <%= e.time %> - <%= e.author %></a>

            <% if ((user)&&(e.author == user.name)) { %>
              <form action="/entries/<%= e.id %>?_method=DELETE" method="POST" class="delete-form">
                  <button type="submit">DELETE</button>
              </form>
            <% } %>
  
        </li>
      <% }); %>
    </ul>
    <% if (user) { %>
      <a href="/entries/new">Add Entry</a>
    <% } %>

<%- include('../partials/footer') %>